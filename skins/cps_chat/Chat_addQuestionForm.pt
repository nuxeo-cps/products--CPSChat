<html i18n:domain="cpschat">
<head>
	<meta http-equiv="content-type" content="text/html;charset=iso-8859-1" />
    <meta http-equiv="refresh" tal:attributes="content python:30" />
	<title tal:content="here/title" />
    <link rel="Stylesheet" type="text/css" href=""
    tal:attributes="href string:${here/portal_url}nuxeo_css1.css" />
    <style type="text/css" media="all"
    tal:content="string:@import url(${here/portal_url}nuxeo_css2.css);"></style>
    <style type="text/css" media="all"
    tal:condition="exists: here/custom.css"
    tal:content="string:@import url(${here/portal_url}custom.css);"></style>
</head>
<body>
  <h1 i18n:translate="chat_enter_a_message">
  Post a question
  </h1>
  <form action="addQuestion" method="POST" target="_top">
    <table align="center" cellspacing="2" cellpadding="1" width="75%">
      <tr>
        <td align="right" bgcolor="#EEEEEE">
          <strong>
            <span i18n:translate="chat_enter_your_nickname">
              Your nick name
            </span>
          </strong>
        </td>
        <td>
           <tal:block define="member
           here/portal_membership/getAuthenticatedMember;
                              isAno python:here.portal_membership.isAnonymousUser()">

             <tal:block condition="isAno">
               <input TYPE="text" NAME="pseudo" SIZE="18" />
             </tal:block>
             <tal:block condition ="not:isAno">
               <input TYPE="text" NAME="pseudo" SIZE="18" readonly
                      tal:attributes="value member"/>
             </tal:block>
           </tal:block>
        </td>
      </tr>
      <tr>
          <td align="right" bgcolor="#EEEEEE">
            <strong>
              <span i18n:translate="chat_your_question">
                Your question
              </span>
            </strong>
          </td>
      	<td>
            <textarea COLS="50" ROWS="5" NAME="question" WRAP="hard"></textarea>
         </td>
      </tr>
      <tr>
      	<td align="right" colspan="2">
            <input type="submit" name="submit" value="button_submit"
                   i18n:attributes="value" />
          </td>
      </tr>
    </table>
    <br />
    <span i18n:translate="chat_ass_post_warning">
    Please, remember your post won't be visible straight within the chat
    board. A moderator will check it out.
  </span>
  </form>
</body>
</html>
