<metal:block use-macro="here/content_lib/macros/master"
             i18n:domain="cpschat">
  <metal:block metal:fill-slot="header">
    <h1 i18n:translate="chat_moderate_heading">
        Moderate the chat
    </h1>
  </metal:block>
  <metal:block fill-slot="main">
    <script language="javascript">
  <!--
    function open_external_window() {
      window.open('Chat_index', 'Chat', 'toolbar=0, scrollbars=0, location=0, statusb ar=0, menubar=0, resizable=1, dependent=1, width=800, height=500')
     }
  //->
  </script>
  <br />
  <tal:block define="id_question python:request.get('id_question', None)">
    <tal:block condition="python:id_question is not None"
               define="question python:here.getQuestion(int(id_question))">
      <form name="form" method="post" action="Chat_modify_reply">
        <input type="hidden" name="id_question"
               tal:attributes="value id_question" />
        <table border="0" align="center" width="100%" cellspacing="2" cellpadding="2">
        <tr>
          <td>
            <strong>
              <span i18n:translate="">
                Modify the reply &nbsp;:&nbsp;
                  <span i18n:name="id_question" tal:content="question/id"
  />
              </span>
            </strong>
          </td>
        </tr>
        <tr bgcolor="#EEEEEE">
         <td>
          <strong>
            <span i18n:translate="label_from">From :</span>
          </strong>
          <br />
          <div align="left" tal:content="question/answer" />
          </td>
        </tr>
        <tr>
          <td align="left">
          <strong>
            <span i18n:translate="label_to">To :</span>
          </strong>
          <br >/
          <textarea cols="60" rows="27" name="answer"
                    tal:content="question/answer"></textarea>
          </td>
        </tr>
        <tr>
          <td colspan="3" align="right">
            <input type="submit" value="button_change"
                   i18n:attributes="value" />
          </td>
        </tr>
        </table>
      </form>
    </tal:block>
  </tal:block>
  </metal:block>
</metal:block>
